        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <div class="table-agile-info">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            case
                        </div>
                    </div>
                    <!-- <div class="table-responsive container"> -->
                    <div class="container-fluid mt-5">
                        <div class=" mr-auto">
                            <h3 class="cust-font" style="text-align: center;">Status:
                                <%= clientCase.Status %>
                            </h3>
                            <br>
                            <div class="profile" style="background-color: white;">
                                <div class="border1">
                                    <h2 class="cust-font"><u>Client Information</u>:</h2>
                                    <br>
                                    <div style="display: flex;">
                                        <h4 class="cust-font1">Client 1: &ensp; </h4>
                                        <%= clientCase.name1 %>
                                    </div> <br>
                                    <div style="display: flex;">
                                        <h4 class="cust-font1">Client 2: &ensp; </h4>
                                        <%= clientCase.name2 %>
                                    </div> <br>
                                    <div style="display: flex;">
                                        <h4 class="cust-font1">DOB: &ensp; </h4>
                                        <p id="dob2">
                                            <%= clientCase.DOB %>
                                        </p>
                                    </div> <br>
                                    <script>
                                        var s2 = document.getElementById('dob2');
                                        var d2 = new Date(s2.innerHTML);
                                        var weekday2 = new Array(7);
                                        weekday2[0] = "Sunday";
                                        weekday2[1] = "Monday";
                                        weekday2[2] = "Tuesday";
                                        weekday2[3] = "Wednesday";
                                        weekday2[4] = "Thursday";
                                        weekday2[5] = "Friday";
                                        weekday2[6] = "Saturday";
                                        var curr_day2 = weekday2[d2.getDay()];
                                        var curr_date2 = d2.getDate();
                                        var curr_month2 = d2.getMonth() + 1;
                                        var curr_year2 = d2.getFullYear();
                                        document.getElementById('dob2').textContent = curr_day2 + " " + curr_date2 + "-" + curr_month2 + "-" + curr_year2;
                                    </script>
                                    <div style="display: flex;">
                                        <h4 class="cust-font1">Policy Name: &ensp; </h4>
                                        <%= clientCase.Policy %>
                                    </div> <br>
                                    <div style="display: flex;">
                                        <h4 class="cust-font1">Policy amount: &ensp; </h4>
                                        <%= clientCase.Amount %>$</div> <br>
                                    <div style="display: flex;">
                                        <h4 class="cust-font1">Address: &ensp; </h4>
                                        <%= clientCase.Address %>
                                    </div> <br>
                                    <div style="display: flex;">
                                        <h4 class="cust-font1">Phone#: &ensp; </h4>
                                        <%= clientCase.PhoneNo %>
                                    </div> <br>
                                    <div style="display: flex;">
                                        <h4 class="cust-font1">Schedule Date: &ensp; </h4>
                                        <p id="date2">
                                            <%= clientCase.ScheduledDate %>
                                        </p>
                                    </div><br>
                                    <script>
                                        var s1 = document.getElementById('date2');
                                        var d1 = new Date(s1.innerHTML);
                                        var weekday = new Array(7);
                                        weekday[0] = "Sunday";
                                        weekday[1] = "Monday";
                                        weekday[2] = "Tuesday";
                                        weekday[3] = "Wednesday";
                                        weekday[4] = "Thursday";
                                        weekday[5] = "Friday";
                                        weekday[6] = "Saturday";
                                        var curr_day1 = weekday[d1.getDay()];
                                        var curr_date1 = d1.getDate();
                                        var curr_month1 = d1.getMonth() + 1;
                                        var curr_year1 = d1.getFullYear();
                                        document.getElementById('date2').textContent = curr_day1 + " " + curr_date1 + "-" + curr_month1 + "-" + curr_year1;
                                    </script>
                                    <div style="display: flex;">
                                        <h4 class="cust-font1">Time: &ensp; </h4>
                                        <%= clientCase.Time %>
                                    </div> <br>
                                    <h4 class="cust-font1">Requirements:</h4>
                                    <div style="padding-left: 3%;">
                                        <ul>
                                            <li>1.
                                                <%= clientCase.value1 %>
                                            </li>
                                            <li>2.
                                                <%= clientCase.value2 %>
                                            </li>
                                            <li>3.
                                                <%= clientCase.value3 %>
                                            </li>
                                            <li>4.
                                                <%= clientCase.value4 %>
                                            </li>
                                            <li>5.
                                                <%= clientCase.value5 %>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <form action="/<%= clientCase._id%>" method="POST">
                                <br>
                                <!-- <div class="btn-group"> -->
                                <div class="col-sm-1">
                                    <input name="Status" hidden value="Pending" type="text">
                                    <input name="Checker" hidden value="1" type="text">
                                    <button type="submit" class="btn btn-primary">Pending</button>
                                </div>
                            </form>
                            <form action="/<%= clientCase._id%>" method="POST">
                                <div class="col-sm-1">
                                    <input hidden name="Status" value="Ongoing" type="text">
                                    <input hidden value="1" name="Checker" type="text">
                                    <button type="submit" class="btn btn-primary">OnGoing</button>
                                </div>
                            </form>
                            <form action="/<%= clientCase._id%>" method="POST">
                                <div class="col-sm-1">
                                    <input hidden name="Status" value="Completed" type="text">
                                    <input hidden value="1" name="Checker" type="text">
                                    <button type="submit" class="btn btn-primary">Completed</button>
                                </div>
                            </form>
                            <br> <br> <br>
                            <!-- </div> -->

                            <!-- Agent Comment box Post-->
                            <div class="m-4">
                                <form action="/<%= clientCase._id%>" method="POST">
                                    <div class="form-group">
                                        <label><h2>Question/Comment:</h2></label>
                                        <!-- <textarea class="form-control" rows="5" id="comment"></textarea> -->
                                        <input type="text" class="form-control" id="comment" name="AdminComment" placeholder="Enter Your Comment">
                                        <!-- <input type="text" hidden name="AdminComment" value="2"> -->
                                    </div>
                                    <button type="submit" class="btn btn-primary">Post</button>
                                    <!-- <button onclick="window.location.href = '/addComment';" type="submit" class="btn btn-primary">Post</button> -->
                                </form>
                            </div>
                            <br> <br>
                            <!-- your comment -->
                            <div class="m-4" style="margin-bottom: 50px">
                                <h2>Your Comment:</h2>
                                <div class="border1" style="background-color: white;">
                                  <img src="/img/avatar11.png" class="rounded-circle" alt="" style="cursor: pointer;" id="mydrop" height="40px" width="40px">
				
                                    <%= clientCase.AdminComment %>
                                </div>
                            </div>

                            <!-- Agent Comment Box Post -->
                            <div class="m-4 " style="margin-bottom: 50px;">
                                <h2>Agent Comment:</h2>
                                <div class="border1" style="background-color: white;">
                                  <img src="/img/avatar.png" class="rounded-circle" alt="" style="cursor: pointer;" id="mydrop" height="40px" width="40px">
				
                                    <%= clientCase.AgentComment %>
                                </div>
                            </div>


                        </div>
                    </div>

                    <!-- <footer class="panel-footer"> -->
                    <!-- <div class="row"> -->

